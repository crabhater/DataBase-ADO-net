<Page x:Class="ДЗ_Модуль_16.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ДЗ_Модуль_16"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage">

    <Grid>
        <Button
            Content="Task 1"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Width="200"
            Margin="0, 50" Click="Button_Click"/>
        <Button
            Content="Task 2"
            x:Name="Task2Button"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Width="200"
            Margin="0, 100" Click="Task2Button_Click"/>
        <Button
            Content="Task 3"
            x:Name="Task3Button"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Width="200"
            Margin="0, 150" Click="Task3Button_Click"/>
        <TextBlock
            Text="&lt;- По кнопке будет вызван INSERT в таблицы, но кодом не прописано создание БД"
            VerticalAlignment="Top"
            HorizontalAlignment="Right"
            Margin="500,100,100,0"
            TextWrapping="Wrap"/>
    </Grid>
</Page>
